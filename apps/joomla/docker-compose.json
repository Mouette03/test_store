{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "joomla",
      "image": "joomla:6.0.1-php8.3-fpm-alpine",
      "dependsOn": {
        "db-joomla": {
          "condition": "service_healthy"
        },
        "nginx-joomla": {
          "condition": "service_started"
        }
      },
      "internalPort": 9000,
      "environment": [
        {
          "key": "JOOMLA_DB_HOST",
          "value": "db-joomla"
        },
        {
          "key": "JOOMLA_DB_USER",
          "value": "joomlauser"
        },
        {
          "key": "JOOMLA_DB_PASSWORD",
          "value": "${MYSQL_PASSWORD}"
        },
        {
          "key": "JOOMLA_DB_NAME",
          "value": "joomladb"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/html",
          "containerPath": "/var/www/html"
        }
      ],
      "healthCheck": {
        "test": "sh -c 'echo PING | socat - UNIX-CONNECT:/var/run/php-fpm.sock || exit 1'",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3,
        "startPeriod": "60s"
      }
    },
    {
      "name": "nginx-joomla",
      "image": "nginx:alpine",
      "internalPort": 80,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/html",
          "containerPath": "/var/www/html",
          "readOnly": true
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/nginx.conf",
          "containerPath": "/etc/nginx/conf.d/default.conf"
        }
      ],
      "dependsOn": {
        "joomla": {
          "condition": "service_healthy"
        }
      },
      "isMain": true,
      "healthCheck": {
        "test": "wget -q -O- http://localhost:80/ || exit 1",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3,
        "startPeriod": "30s"
      }
    },
    {
      "name": "db-joomla",
      "image": "mariadb:12",
      "environment": [
        {
          "key": "MYSQL_ROOT_PASSWORD",
          "value": "${MYSQL_ROOT_PASSWORD}"
        },
        {
          "key": "MYSQL_USER",
          "value": "joomlauser"
        },
        {
          "key": "MYSQL_PASSWORD",
          "value": "${MYSQL_PASSWORD}"
        },
        {
          "key": "MYSQL_DATABASE",
          "value": "joomladb"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/mysql"
        }
      ],
      "healthCheck": {
        "test": "mysqladmin ping -h localhost || exit 1",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3,
        "startPeriod": "60s"
      }
    }
  ]
}
