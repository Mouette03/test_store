  "form_fields": [
    {
      "type": "text",
      "label": "URL publique (FRONT_URL)",
      "env_variable": "FRONT_URL",
      "required": true,
      "placeholder": "https://forms.example.com"
    },
    {
      "type": "text",
      "label": "URL API (APP_URL)",
      "env_variable": "APP_URL",
      "required": true,
      "placeholder": "https://forms.example.com/api"
    },
    {
      "type": "password",
      "label": "Secret partag√© UI/API (FRONT_API_SECRET)",
      "env_variable": "FRONT_API_SECRET",
      "required": true,
      "min": 16
    },
    {
      "type": "password",
      "label": "JWT secret (JWT_SECRET)",
      "env_variable": "JWT_SECRET",
      "required": true,
      "min": 32
    },
    {
      "type": "text",
      "label": "Nom DB (DB_DATABASE)",
      "env_variable": "DB_DATABASE",
      "required": true,
      "default": "opnform",
      "max": 64,
      "min": 3
    },
    {
      "type": "text",
      "label": "User DB (DB_USERNAME)",
      "env_variable": "DB_USERNAME",
      "required": true,
      "default": "opnform",
      "max": 32,
      "min": 3
    },
    {
      "type": "password",
      "label": "Mot de passe DB (DB_PASSWORD)",
      "env_variable": "DB_PASSWORD",
      "required": true,
      "max": 64,
      "min": 16
    }
  ],
  "supported_architectures": ["arm64", "amd64"],
