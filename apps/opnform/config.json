{
  "$schema": "../app-info-schema.json",
  "name": "OpnForm",
  "id": "opnform",
  "port": 3000,
  "available": true,
  "exposable": true,
  "dynamic_config": true,
  "tipi_version": 5,
  "version": "1.0.0",
  "categories": ["utilities"],
  "description": "Open-source form builder (OpnForm) with UI + API + PostgreSQL + Redis.",
  "short_desc": "Form builder open-source",
  "author": "OpnForm",
  "source": "https://github.com/OpnForm/OpnForm",
  "form_fields": [
    {
      "type": "text",
      "label": "URL publique",
      "env_variable": "FRONT_URL",
      "required": true,
      "placeholder": "https://forms.example.com"
    },
    {
      "type": "text",
      "label": "URL API",
      "env_variable": "APP_URL",
      "required": true,
      "placeholder": "https://forms.example.com/api"
    },
    {
      "type": "password",
      "label": "Secret partag√© UI/API",
      "env_variable": "FRONT_API_SECRET",
      "required": true,
      "min": 10
    },
    {
      "type": "password",
      "label": "JWT secret",
      "env_variable": "JWT_SECRET",
      "required": true,
      "min": 32
    },
    {
      "type": "text",
      "label": "Nom DB",
      "env_variable": "DB_DATABASE",
      "required": true,
      "default": "opnform",
      "max": 64,
      "min": 3
    },
    {
      "type": "text",
      "label": "User DB",
      "env_variable": "DB_USERNAME",
      "required": true,
      "default": "opnform",
      "max": 32,
      "min": 3
    },
    {
      "type": "password",
      "label": "Mot de passe DB",
      "env_variable": "DB_PASSWORD",
      "required": true,
      "max": 64,
      "min": 10
    }
  ],
  "supported_architectures": ["arm64", "amd64"],
