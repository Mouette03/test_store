{
  "services": [
    {
      "name": "mariadb",
      "image": "mariadb:latest",
      "environment": {
        "MYSQL_ROOT_PASSWORD": "root",
        "MYSQL_DATABASE": "dolidb",
        "MYSQL_USER": "dolidbuser",
        "MYSQL_PASSWORD": "dolidbpass"
      }
    },
    {
      "name": "web",
      "image": "dolibarr/dolibarr",
      "environment": {
        "DOLI_DB_HOST": "mariadb",
        "DOLI_DB_NAME": "dolidb",
        "DOLI_DB_USER": "dolidbuser",
        "DOLI_DB_PASSWORD": "dolidbpass",
        "DOLI_URL_ROOT": "${DOLI_URL_ROOT:-http://192.168.1.5}",
        "DOLI_ADMIN_LOGIN": "admin",
        "DOLI_ADMIN_PASSWORD": "admin",
        "DOLI_CRON": "${DOLI_CRON}",
        "DOLI_CRON_KEY": "${DOLI_CRON_KEY}",
        "WWW_USER_ID": "1000",
        "WWW_GROUP_ID": "1000"
      },
      "internalPort": 80,
      "port": 8073,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/docker-init.d",
          "containerPath": "/var/www/scripts/docker-init.d",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/before-starting.d",
          "containerPath": "/var/www/scripts/before-starting.d",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    }
  ]
}