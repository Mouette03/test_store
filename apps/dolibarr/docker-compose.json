{
  "services": [
    {
      "name": "dolibarr",
      "image": "tuxgasy/dolibarr:latest",
      "internalPort": 80,
      "isMain": true,
      "environment": {
        "DOLI_INIT_DEMO": "0",
        "DOLI_DB_HOST": "mariadb",
        "DOLI_DB_NAME": "dolibarrdb",
        "DOLI_DB_USER": "doli",
        "DOLI_DB_PASSWORD": "dolibarrpwd",
        "DOLI_ADMIN_LOGIN": "admin",
        "DOLI_ADMIN_PASSWORD": "admin1234",
        "DOLI_CRON": "yes",
        "DOLI_CRON_KEY": "securekey",
        "DOLI_COMPANY_NAME": "MonEntreprise",
        "WWW_USER_ID": "1000",
        "WWW_GROUP_ID": "1000"
      },
      "volumes": [
        {
   	  "hostPath": "${APP_DATA_DIR}/dolibarr/documents",
   	  "containerPath": "/var/www/html/documents"
  	},
 	{
          "hostPath": "${APP_DATA_DIR}/dolibarr/conf",
          "containerPath": "/var/www/html/conf"
        }
      ],
      "dependsOn": {
        "mariadb": {
          "condition": "service_started"
        }
      }
    },
    {
      "name": "mariadb",
      "image": "mariadb:10.6",
      "environment": {
        "MYSQL_ROOT_PASSWORD": "rootpass",
        "MYSQL_DATABASE": "dolibarrdb",
        "MYSQL_USER": "doli",
        "MYSQL_PASSWORD": "dolibarrpwd"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/db_data",
          "containerPath": "/var/lib/mysql"
        }
      ]
    }
  ]
}
