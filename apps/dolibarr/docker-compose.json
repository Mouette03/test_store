{
  "services": [
    {
      "name": "mariadb",
      "image": "mariadb:11.4",
      "environment": {
        "MYSQL_ROOT_PASSWORD": "rootpass",
        "MYSQL_DATABASE": "dolibarrdb",
        "MYSQL_USER": "doli",
        "MYSQL_PASSWORD": "dolibarrpwd"

      },
      "volumes": [
        {
          "hostPath": "db",
          "containerPath": "/var/lib/mysql",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "CMD healthcheck.sh --connect --innodb_initialized",
        "interval": "10s",
        "timeout": "5s",
        "retries": 3,
        "start_period": "60s"
      },
      "deploy": {
        "resources": {
          "limits": {
            "cpus": "1",
            "memory": "512M"
          },
          "reservations": {
            "cpus": "0.2",
            "memory": "32M"
          }
        }
      }
    },
    {
      "name": "app",
      "image": "dolibarr/dolibarr:latest",
      "environment": {
         "DOLI_INIT_DEMO": "0",
        "DOLI_DB_HOST": "mariadb",
        "DOLI_DB_NAME": "dolibarrdb",
        "DOLI_DB_USER": "doli",
        "DOLI_DB_PASSWORD": "dolibarrpwd",
        "DOLI_ADMIN_LOGIN": "${DOLIBARR_ADMIN_USER}",
        "DOLI_ADMIN_PASSWORD": "${DOLIBARR_ADMIN_PASSWORD}",
        "DOLI_CRON": "${DOLI_CRON_ON}",
        "DOLI_CRON_KEY": "${DOLI_CRON_KEY}",
        "DOLI_COMPANY_NAME": "${DOLI_COMPANY_NAME}",
        "WWW_USER_ID": "1000",
        "WWW_GROUP_ID": "1000"
      },
      "internalPort": 80,
      "volumes": [
        {
          "hostPath": "custom",
          "containerPath": "/var/www/html/custom",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "documents",
          "containerPath": "/var/www/documents",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "CMD curl -f http://127.0.0.1",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3,
        "start_period": "300s"
      },
      "deploy": {
        "resources": {
          "limits": {
            "cpus": "1",
            "memory": "512M"
          },
          "reservations": {
            "cpus": "0.2",
            "memory": "32M"
          }
        }
      },
      "dependsOn": {
        "db": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "cron",
      "image": "dolibarr/dolibarr:latest",
      "environment": {
       "DOLI_INIT_DEMO": "0",
        "DOLI_DB_HOST": "mariadb",
        "DOLI_DB_NAME": "dolibarrdb",
        "DOLI_DB_USER": "doli",
        "DOLI_DB_PASSWORD": "dolibarrpwd",
        "DOLI_ADMIN_LOGIN": "${DOLIBARR_ADMIN_USER}",
        "DOLI_ADMIN_PASSWORD": "${DOLIBARR_ADMIN_PASSWORD}",
        "DOLI_CRON": "${DOLI_CRON_ON}",
        "DOLI_CRON_KEY": "${DOLI_CRON_KEY}",
        "DOLI_COMPANY_NAME": "${DOLI_COMPANY_NAME}",
        "WWW_USER_ID": "1000",
        "WWW_GROUP_ID": "1000"

      },
      "volumes": [
        {
          "hostPath": "custom",
          "containerPath": "/var/www/html/custom",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "documents",
          "containerPath": "/var/www/documents",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "deploy": {
        "resources": {
          "limits": {
            "cpus": "1",
            "memory": "512M"
          },
          "reservations": {
            "cpus": "0.2",
            "memory": "32M"
          }
        }
      },
      "dependsOn": {
        "app": {
          "condition": "service_healthy"
        }
      }
    }
  ]
}

