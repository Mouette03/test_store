{
  "services": [
    {
      "name": "stremio_server",
      "image": "stremio/server:v4.20.12",
      "internalPort": 11470,
      "isMain": true,
      "environment": {
        "FFMPEG_BIN": "/bin/ffmpeg",
        "FFPROBE_BIN": "/bin/ffprobe"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/bin/ffmpeg",
          "containerPath": "/bin/ffmpeg"
        },
        {
          "hostPath": "${APP_DATA_DIR}/bin/ffprobe",
          "containerPath": "/bin/ffprobe"
        }
      ]
    }
  ]
}