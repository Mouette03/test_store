{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "nextcloud",
      "image": "nextcloud:32.0.3-apache",
      "environment": [
        {
          "key": "POSTGRES_HOST",
          "value": "db-nextcloud"
        },
        {
          "key": "REDIS_HOST",
          "value": "redis-nextcloud"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_DB",
          "value": "nextcloud"
        },
        {
          "key": "NEXTCLOUD_ADMIN_USER",
          "value": "${NEXTCLOUD_ADMIN_USER}"
        },
        {
          "key": "NEXTCLOUD_ADMIN_PASSWORD",
          "value": "${NEXTCLOUD_ADMIN_PASSWORD}"
        },
        {
          "key": "NEXTCLOUD_TRUSTED_DOMAINS",
          "value": "${APP_DOMAIN}"
        },
        {
          "key": "TRUSTED_PROXIES",
          "value": "172.16.0.0/12"
        },
        {
          "key": "OVERWRITEPROTOCOL",
          "value": "${APP_PROTOCOL}"
        },
        {
          "key": "PHP_MEMORY_LIMIT",
          "value": "${PHP_MEMORY_LIMIT}"
        },
        {
          "key": "PHP_UPLOAD_LIMIT",
          "value": "${PHP_UPLOAD_LIMIT}"
        }
      ],
      "internalPort": 80,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud",
          "containerPath": "/var/www/html"
        }
      ],
      "dependsOn": ["db-nextcloud", "redis-nextcloud"],
      "isMain": true
    },
    {
      "name": "db-nextcloud",
      "image": "postgres:17",
      "environment": [
        {
          "key": "POSTGRES_PASSWORD",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_DB",
          "value": "nextcloud"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    },
    {
      "name": "redis-nextcloud",
      "image": "redis:7.4.5",
      "user": "1000:1000",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ]
    },
    {
      "name": "cron",
      "image": "nextcloud:32.0.2-apache",
      "entrypoint": "/cron.sh",
      "dependsOn": ["db-nextcloud", "redis-nextcloud"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud",
          "containerPath": "/var/www/html"
        }
      ]
    }
  ]
}
