{
  "services": [
    {
      "name": "galette-db",
      "image": "mariadb:10.5",
      "environment": {
        "MYSQL_ROOT_PASSWORD": "root",
        "MYSQL_DATABASE": "galette",
        "MYSQL_USER": "${DB_USER}",
        "MYSQL_PASSWORD": "${DB_PASSWORD}"
      },
      "volumes": [
         {
           "hostPath": "galette-db-data",
           "containerPath": "/var/lib/mysql"
        }
      ]
    },
    {
      "name": "galette",
      "image": "ghcr.io/galette-community/galette:latest",
      "internalPort": 80,
      "isMain": true,
      "environment": {
        "DB_HOST": "galette-db",
        "DB_PORT": "3306",
        "DB_NAME": "galette",
        "DB_USER": "${DB_USER}",
        "DB_PASSWORD": "${DB_PASSWORD}"
      },
      "volumes": [
         {
           "hostPath": "galette-config",
           "containerPath": "/var/www/html/config"
         },
         {
           "hostPath": "galette-data",
           "containerPath": "/var/www/html/data"
        }
      ],
      "depends_on": [
        "galette-db"
      ]
    }
  ],
  "volumes": {
    "galette-db-data": {},
    "galette-config": {},
    "galette-data": {}
  }
}
