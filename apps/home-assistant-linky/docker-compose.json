{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "homeassistant",
      "image": "ghcr.io/home-assistant/home-assistant:2026.1.3",
      "internalPort": 8123,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/localtime",
          "containerPath": "/etc/localtime"
        },
        {
          "hostPath": "/run/dbus",
          "containerPath": "/run/dbus"
        }
      ],
      "restart": "unless-stopped",
      "dependsOn": ["matter-server"],
      "healthCheck": {
        "test": "curl --fail --silent http://127.0.0.1:8123/ >/dev/null 2>&1 || exit 1",
        "interval": "10s",
        "timeout": "5s",
        "retries": 30,
        "startPeriod": "60s"
      }
    },
    {
      "name": "matter-server",
      "image": "ghcr.io/home-assistant-libs/python-matter-server:stable",
      "networkMode": "host",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/matter",
          "containerPath": "/data"
        }
      ],
      "restart": "unless-stopped"
    },
    {
      "name": "ha-linky",
      "image": "ghcr.io/bokub/ha-linky-aarch64:1.7.0",
      "environment": [
        {
          "key": "SUPERVISOR_TOKEN",
          "value": "${SUPERVISOR_TOKEN}"
        },
        {
          "key": "WS_URL",
          "value": "ws://homeassistant:8123/api/websocket"
        },
        {
          "key": "TZ",
          "value": "${TIMEZONE}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/ha-linky",
          "containerPath": "/data"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/ha-linky/config",
          "containerPath": "/config"
        }
      ],
      "restart": "unless-stopped",
      "dependsOn": {
        "homeassistant": {
          "condition": "service_healthy"
        }
      }
    }
  ]
}
