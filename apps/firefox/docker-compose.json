{
  "services": [
    {
      "name": "firefox",
      "image": "lscr.io/linuxserver/firefox:latest",
      "environment": {
        "PUID": "1000",
        "PGID": "1000",
        "TZ": "Etc/UTC",
        "FIREFOX_CLI": "https://www.linuxserver.io/"
      },
      "internalPort": 3000,
      "addPorts": [
        {
          "containerPort": 3001,
          "hostPort": 3001,
          "tcp": true,
          "udp": false
        }
      ],
      "volumes": [
        {
          "hostPath": "/path/to/firefox/config",
          "containerPath": "/config",
        }
      ],
      "securityOpt": [
        "seccomp:unconfined"
      ],
      "shmSize": "1gb"
    }
  ]
}