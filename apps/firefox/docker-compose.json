{
  "services": [
    {
      "name": "firefox",
      "image": "lscr.io/linuxserver/firefox:latest",
      "internalPort": 3000,
      "isMain": true,
      "environment": {
        "PUID": "1000",
        "PGID": "1000",
        "TZ": "Etc/UTC"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/firefox/config",
          "containerPath": "/config"
        }
      ]
    }
  ]
}