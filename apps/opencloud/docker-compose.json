{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "opencloud",
      "image": "opencloudeu/opencloud:4.0.0",
      "internalPort": 9200,
      "isMain": true,
      "entrypoint": "/bin/sh",
      "command": [
        "-c",
        "opencloud init --insecure true --force-overwrite || true; opencloud server"
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/etc/opencloud"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/data",
          "containerPath": "/var/lib/opencloud"
        }
      ],
      "environment": [
        {
          "key": "INSECURE",
          "value": "true"
        },
        {
          "key": "OCIS_INSECURE",
          "value": "true"
        },
        {
          "key": "OCIS_URL",
          "value": "http://${APP_DOMAIN}"
        },
        {
          "key": "PROXY_TLS",
          "value": "false"
        },
        {
          "key": "PROXY_HTTP_ADDR",
          "value": "0.0.0.0:9200"
        },
        {
          "key": "WEB_UI_CONFIG_SERVER",
          "value": "http://${APP_DOMAIN}"
        },
        {
          "key": "WEB_UI_THEME_SERVER",
          "value": "http://${APP_DOMAIN}"
        },
        {
          "key": "WEB_UI_THEME_PATH",
          "value": "/themes/opencloud/theme.json"
        },
        {
          "key": "WEB_OIDC_METADATA_URL",
          "value": "http://${APP_DOMAIN}/.well-known/openid-configuration"
        },
        {
          "key": "WEB_OIDC_AUTHORITY",
          "value": "http://${APP_DOMAIN}"
        },
        {
          "key": "IDM_ADMIN_PASSWORD",
          "value": "${OPENCLOUD_ADMIN_PASSWORD}"
        },
        {
          "key": "OCIS_LOG_LEVEL",
          "value": "info"
        }
      ]
    }
  ]
}
