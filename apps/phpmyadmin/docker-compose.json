{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "phpmyadmin",
      "image": "phpmyadmin:5.2-apache",
      "internalPort": 80,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/config.user.inc.php",
          "containerPath": "/etc/phpmyadmin/config.user.inc.php",
          "readOnly": true
        }
      ],
      "environment": [
        {
          "key": "PMA_ARBITRARY",
          "value": "1"
        },
        {
          "key": "PMA_PORTS",
          "value": "${PMA_PORTS}"
        },
        {
          "key": "PMA_HOST",
          "value": "mariadb"
        },
        {
          "key": "PMA_USER",
          "value": "${MYSQL_USER:-root}"
        },
        {
          "key": "PMA_PASSWORD",
          "value": "${MYSQL_PASSWORD}"
        }
      ],
      "dependsOn": {
        "mariadb": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "mariadb",
      "image": "mariadb:11",
      "environment": {
        "MYSQL_ROOT_PASSWORD": "${MYSQL_ROOT_PASSWORD}",
        "MYSQL_DATABASE": "${MYSQL_DATABASE:-madb}",
        "MYSQL_USER": "${MYSQL_USER:-root}",
        "MYSQL_PASSWORD": "${MYSQL_PASSWORD}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/database",
          "containerPath": "/var/lib/mysql",
          "readOnly": false
        }
      ],
      "healthCheck": {
        "test": ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "--password=${MYSQL_ROOT_PASSWORD}"],
        "interval": "10s",
        "timeout": "5s",
        "retries": 15
      }
    }
  ]
}
